{{!
    @template block_opencast/defaults_settings_actions

    This template renders a link that redirects to a page which manages the course's default values.

    Example context (json):
    {
        "hasanyactions": true,
        "managedefaultsurl": "https://moodle.local/blocks/opencast/managedefaults.php?courseid=3&ocinstanceid=1"
    }
}}
{{#hasanyactions}}
<div class="d-flex flex-wrap flex-row-reverse m-b-1 text-right">
    {{#managedefaultsurl}}
        <div class="pl-1">
            <a class="iconsmall" title="{{#str}} manageseriesforcourse, block_opencast {{/str}}" href="{{{managedefaultsurl}}}">
                {{#pix}} i/grades, core{{/pix}}
                {{#str}} managedefaultsforuser, block_opencast {{/str}}
            </a>
        </div>
    {{/managedefaultsurl}}
</div>
{{/hasanyactions}}

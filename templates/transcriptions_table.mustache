{{!
    @template block_opencast/transcriptions_table

    This template renders the transcriptions table.

    Example context (json):
    {
        "list": null,
        "listhascontent": false
    }
}}
<div class="p-1">
    {{#listhascontent}}
        <table class="table table-striped" id="transcriptionstable">
            <thead>
                <tr>
                    <th>
                        {{# str}}transcriptionlang_thead, block_opencast {{/ str}}
                    </th>
                    <th>
                        {{# str}}transcriptionaction_thead, block_opencast {{/ str}}
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#list}}
                    <tr>
                        <td>
                            {{lang}}
                        </td>
                        <td width="10%">
                            <a class="iconsmall" target="_blank" title="{{#str}} downloadtranscription, block_opencast {{/str}}" href="{{downloadurl}}">
                                {{#pix}} i/down, core{{/pix}}
                            </a>
                            {{#candelete}}
                                <a class="iconsmall" title="{{#str}} deletetranscription, block_opencast {{/str}}" href="{{deleteurl}}">
                                    {{#pix}} i/delete, core{{/pix}}
                                </a>
                            {{/candelete}}
                        </td>
                    </tr>
                {{/list}}
            </tbody>
        </table>
    {{/listhascontent}}
    {{^listhascontent}}
        {{# str}}notranscription, block_opencast {{/ str}}
    {{/listhascontent}}
</div>
{{#addnewurl}}
<a type="button" class="btn btn-primary mt-3" id="createnewtranscription" href="{{addnewurl}}">
    {{# str}}addnewtranscription, block_opencast {{/ str}}
</a>
{{/addnewurl}}